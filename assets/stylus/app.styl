@import '../lib/typography/typography.styl'

$c-nav-items = #000
$std-margin = 1rem

html, body
    height: 100%
    width: 100%
    overflow-y: scroll

body
    color: #222
    font-family: monospace
    // line-height: 1.9rem
    // font-size: 17px

.wrap-all
    display: flex
    flex-flow: column
    justify-content: space-between
    min-height: 100%

.navbar-wrap, .main-wrap, .footer-wrap
    padding: $std-margin

.navbar
    max-width: 1100px
    margin: 0 auto

.footer-wrap
    display: flex
    align-items: center
    justify-content: center

.header
    position: fixed
    background-color: rgba(255, 255, 255, .9)
    border-bottom: 2px dashed #ccc
    width: 100%

.footer
    border-top: 2px dashed #ccc

.content
    padding-top: 70px
    max-width: 50rem
    margin: 0 auto
    margin-bottom: auto

nav
    display: flex
    justify-content: space-between
    align-items: center

nav a:visited, a
    color: $c-nav-items

nav a:hover
    text-decoration: none

.navbar-brand
    text-decoration: none

.fa-large
    font-size: 2em

.hamburger-menu
    position: fixed
    background-color: red
    top: 0
    left: 0
    height: 100%
    width: 100%
    overflow: hidden


    display: flex
    flex-direction: column

.hamburger-menu-top
    // position: absolute
    // top: 0
    // left: 0

.hamburger-menu-top-wrap
    display: flex
    justify-content: space-between
    padding: $std-margin

.hamburger-menu-links-wrap
    font-size: xx-large
    line-height: 2em
    width: 100%
    height: 100%
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

.active
    text-decoration: none

.hidden
    // display: none
    height: 0
    opacity: 0
    transition: opacity 0.2s, height 0.2s linear

.fade-in
    height: 100%
    opacity: 1
    transition: opacity 0.2s, height 0.2s linear

.desktop
    display: none

.tablet
    display: block

@media (min-width: 600px)
    .desktop
        display: block
    .tablet
        display: none
